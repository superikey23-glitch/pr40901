<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Система управления продуктами</title>
</head>
<body>
    <div class="container">
        <h1>Список продуктов</h1>
        
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Категория</th>
                    <th>Поставщик</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td>$<%= product.price.toFixed(2) %></td>
                    <td><%= product.Category.name %></td>
                    <td><%= product.Supplier.name %></td>
                    <td class="actions">
                        <button onclick="window.location.href='/edit-product/<%= product.id %>'" class="edit-btn">
                            Изменить
                        </button>
                        <form action="/delete-product/<%= product.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="delete-btn">Удалить</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="buttons">
            <button onclick="window.location.href='/add-product'" class="add-btn">
                Добавить продукт
            </button>
            <button onclick="window.location.href='/add-category'" class="add-btn">
                Добавить категорию
            </button>
            <button onclick="window.location.href='/add-supplier'" class="add-btn">
                Добавить поставщика
            </button>
        </div>
    </div>
</body>
</html>